<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>–†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å –∑–∞–¥–∞—á—É - –ú–µ–Ω–µ–¥–∂–µ—Ä –∑–∞–¥–∞—á</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1 class="header__title">
                <a href="/">üìã –ú–µ–Ω–µ–¥–∂–µ—Ä –∑–∞–¥–∞—á</a>
            </h1>
            <nav class="header__nav">
                <a href="/" class="nav-link">–í—Å–µ –∑–∞–¥–∞—á–∏</a>
                <a href="/task/new" class="nav-link nav-link--primary">–ù–æ–≤–∞—è –∑–∞–¥–∞—á–∞</a>
            </nav>
        </div>
    </header>

    <main class="main">
        <div class="container">
            <div class="form-container">
                <h2>–†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å –∑–∞–¥–∞—á—É</h2>
                
                <form method="POST" action="/task/<%= task.id %>" enctype="multipart/form-data" class="task-form">
                    <div class="form-group">
                        <label for="title" class="form-label">–ù–∞–∑–≤–∞–Ω–∏–µ –∑–∞–¥–∞—á–∏ *</label>
                        <input type="text" id="title" name="title" required class="form-input" value="<%= task.title %>">
                    </div>
                    
                    <div class="form-group">
                        <label for="description" class="form-label">–û–ø–∏—Å–∞–Ω–∏–µ</label>
                        <textarea id="description" name="description" rows="4" class="form-textarea"><%= task.description %></textarea>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="status" class="form-label">–°—Ç–∞—Ç—É—Å</label>
                            <select id="status" name="status" class="form-select">
                                <option value="pending" <%= task.status === 'pending' ? 'selected' : '' %>>‚è≥ –û–∂–∏–¥–∞–µ—Ç –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è</option>
                                <option value="in_progress" <%= task.status === 'in_progress' ? 'selected' : '' %>>üîÑ –í –ø—Ä–æ—Ü–µ—Å—Å–µ</option>
                                <option value="completed" <%= task.status === 'completed' ? 'selected' : '' %>>‚úÖ –ó–∞–≤–µ—Ä—à–µ–Ω–∞</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="dueDate" class="form-label">–°—Ä–æ–∫ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è</label>
                            <input type="date" id="dueDate" name="dueDate" class="form-input" 
                                   value="<%= task.dueDate ? task.dueDate.split('T')[0] : '' %>">
                        </div>
                    </div>
                    
                <!-- –°—É—â–µ—Å—Ç–≤—É—é—â–∏–µ —Ñ–∞–π–ª—ã -->
                <% if (task.attachments && task.attachments.length > 0) { %>
                    <div class="form-group">
                        <label class="form-label">–ü—Ä–∏–∫—Ä–µ–ø–ª–µ–Ω–Ω—ã–µ —Ñ–∞–π–ª—ã</label>
                        <div class="existing-attachments">
                            <% task.attachments.forEach(attachment => { %>
                                <div class="attachment-item">
                                    <a href="/download/<%= encodeURIComponent(attachment.filename) %>" class="attachment-link">
                                        üìé <%= attachment.originalname %>
                                    </a>
                                    <button type="button" class="btn btn--danger btn--small" 
                                            onclick="deleteAttachment('<%= task.id %>', '<%= encodeURIComponent(attachment.filename) %>', '<%= attachment.originalname %>')">
                                        –£–¥–∞–ª–∏—Ç—å
                                    </button>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                <% } %>
                    
                    <div class="form-group">
                        <label for="attachments" class="form-label">–î–æ–±–∞–≤–∏—Ç—å —Ñ–∞–π–ª—ã</label>
                        <input type="file" id="attachments" name="attachments" multiple class="form-file">
                        <small class="form-hint">–ú–æ–∂–Ω–æ –≤—ã–±—Ä–∞—Ç—å –Ω–µ—Å–∫–æ–ª—å–∫–æ —Ñ–∞–π–ª–æ–≤</small>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn btn--primary">–°–æ—Ö—Ä–∞–Ω–∏—Ç—å –∏–∑–º–µ–Ω–µ–Ω–∏—è</button>
                        <a href="/" class="btn btn--secondary">–í–µ—Ä–Ω—É—Ç—å—Å—è –∫ —Å–ø–∏—Å–∫—É</a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 –ú–µ–Ω–µ–¥–∂–µ—Ä –∑–∞–¥–∞—á. –õ–∞–±–æ—Ä–∞—Ç–æ—Ä–Ω–∞—è —Ä–∞–±–æ—Ç–∞ ‚Ññ1</p>
        </div>
    </footer>

    <!-- –ú–æ–¥–∞–ª—å–Ω–æ–µ –æ–∫–Ω–æ —É—Å–ø–µ—Ö–∞ -->
    <div id="successModal" class="success-modal">
        <div class="success-modal__content">
            <div class="confetti" id="confetti"></div>
            <div class="success-icon"></div>
            <h3 class="success-title">–£—Å–ø–µ—à–Ω–æ!</h3>
            <p class="success-message">–ò–∑–º–µ–Ω–µ–Ω–∏—è —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã</p>
            <button class="success-close" onclick="closeSuccessModal()">–ó–∞–∫—Ä—ã—Ç—å</button>
        </div>
    </div>

    <script>
        // –§—É–Ω–∫—Ü–∏—è —É–¥–∞–ª–µ–Ω–∏—è —Ñ–∞–π–ª–∞
        function deleteAttachment(taskId, filename, originalname) {
            if (confirm(`–£–¥–∞–ª–∏—Ç—å —Ñ–∞–π–ª ${originalname}?`)) {
                // –°–æ–∑–¥–∞–µ–º —Å–∫—Ä—ã—Ç—É—é —Ñ–æ—Ä–º—É –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ POST –∑–∞–ø—Ä–æ—Å–∞
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/task/${taskId}/attachment/${filename}/delete`;
                document.body.appendChild(form);
                form.submit();
            }
        }

        // –§—É–Ω–∫—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∏—è –∫–æ–Ω—Ñ–µ—Ç—Ç–∏
        function createConfetti() {
            const confettiContainer = document.getElementById('confetti');
            confettiContainer.innerHTML = ''; // –û—á–∏—â–∞–µ–º –ø—Ä–µ–¥—ã–¥—É—â–µ–µ –∫–æ–Ω—Ñ–µ—Ç—Ç–∏
            
            const colors = ['#dc2626', '#059669', '#fbbf24', '#3b82f6', '#8b5cf6'];
            
            for (let i = 0; i < 50; i++) {
                const confettiPiece = document.createElement('div');
                confettiPiece.className = 'confetti-piece';
                confettiPiece.style.left = Math.random() * 100 + '%';
                confettiPiece.style.animationDelay = Math.random() * 2 + 's';
                confettiPiece.style.animationDuration = (Math.random() * 2 + 2) + 's';
                confettiPiece.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confettiContainer.appendChild(confettiPiece);
            }
        }

        // –§—É–Ω–∫—Ü–∏—è –ø–æ–∫–∞–∑–∞ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ —É—Å–ø–µ—Ö–∞
        function showSuccessModal() {
            const modal = document.getElementById('successModal');
            createConfetti();
            modal.classList.add('show');
            
            // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –∑–∞–∫—Ä—ã—Ç—å —á–µ—Ä–µ–∑ 4 —Å–µ–∫—É–Ω–¥—ã
            setTimeout(() => {
                closeSuccessModal();
            }, 4000);
        }

        // –§—É–Ω–∫—Ü–∏—è –∑–∞–∫—Ä—ã—Ç–∏—è –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞
        function closeSuccessModal() {
            const modal = document.getElementById('successModal');
            modal.classList.remove('show');
        }

        // –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–∞—Ä–∞–º–µ—Ç—Ä–∞ —É—Å–ø–µ—Ö–∞ –≤ URL –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
        document.addEventListener('DOMContentLoaded', function() {
            const taskForm = document.querySelector('.task-form');
            const fileInput = document.getElementById('attachments');
            const urlParams = new URLSearchParams(window.location.search);
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –µ—Å—Ç—å –ª–∏ –ø–∞—Ä–∞–º–µ—Ç—Ä success –≤ URL
            if (urlParams.get('success') === 'true') {
                setTimeout(() => {
                    showSuccessModal();
                    // –£–±–∏—Ä–∞–µ–º –ø–∞—Ä–∞–º–µ—Ç—Ä –∏–∑ URL –±–µ–∑ –ø–µ—Ä–µ–∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
                    const newUrl = window.location.pathname;
                    window.history.replaceState({}, document.title, newUrl);
                }, 200);
            }
            
            // –û—á–∏—â–∞–µ–º –ø–æ–ª–µ —Ñ–∞–π–ª–æ–≤ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã (–ø–æ—Å–ª–µ —Ä–µ–¥–∏—Ä–µ–∫—Ç–∞)
            if (fileInput) {
                fileInput.value = '';
            }
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –æ—Ç–ø—Ä–∞–≤–∫–∏ —Ñ–æ—Ä–º—ã
            if (taskForm) {
                taskForm.addEventListener('submit', function(e) {
                    // –î–∞–µ–º —Ñ–æ—Ä–º–µ –æ—Ç–ø—Ä–∞–≤–∏—Ç—å—Å—è, –∞ –∑–∞—Ç–µ–º –æ—á–∏—â–∞–µ–º –ø–æ–ª–µ —Ñ–∞–π–ª–æ–≤
                    setTimeout(() => {
                        if (fileInput) {
                            fileInput.value = '';
                        }
                    }, 100);
                });
            }

            // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –ø—Ä–∏ –∫–ª–∏–∫–µ –≤–Ω–µ –µ–≥–æ
            const modal = document.getElementById('successModal');
            modal.addEventListener('click', function(e) {
                if (e.target === modal) {
                    closeSuccessModal();
                }
            });

            // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –ø—Ä–∏ –Ω–∞–∂–∞—Ç–∏–∏ Escape
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeSuccessModal();
                }
            });
        });
    </script>
</body>
</html>
